<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Monitor.Base" parent="Theme.Design.Light.NoActionBar" />

    <style name="Theme.Monitor" parent="Theme.Monitor.Base">
        <item name="android:statusBarColor">@color/monitor_top_bar</item>
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

    <style name="Monitor.Item.Title" parent="android:TextAppearance">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Monitor.Item.Content" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Monitor.TextAppearance.ToolbarTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Monitor.TextAppearance.TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>