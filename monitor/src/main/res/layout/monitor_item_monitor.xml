<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvHttpCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:minWidth="40dp"
        android:textAppearance="@style/Monitor.Item.Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="200" />

    <TextView
        android:id="@+id/tvHttpPath"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Monitor.Item.Title"
        app:layout_constraintEnd_toStartOf="@id/tvMonitorId"
        app:layout_constraintStart_toEndOf="@id/tvHttpCode"
        app:layout_constraintTop_toTopOf="@id/tvHttpCode"
        tools:text="Get /leavesCZY?tab=repositories" />

    <TextView
        android:id="@+id/tvMonitorId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:textAppearance="@style/Monitor.Item.Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvHttpPath"
        app:layout_constraintTop_toTopOf="@id/tvHttpPath"
        tools:text="1000" />

    <TextView
        android:id="@+id/tvUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/Monitor.Item.Content"
        app:layout_constraintStart_toStartOf="@id/tvHttpPath"
        app:layout_constraintTop_toBottomOf="@id/tvHttpPath"
        tools:text="github.com" />

    <TextView
        android:id="@+id/tvRequestTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:textAppearance="@style/Monitor.Item.Content"
        app:layout_constraintStart_toStartOf="@id/tvHttpPath"
        app:layout_constraintTop_toBottomOf="@id/tvUrl"
        tools:text="18:29:07" />

    <TextView
        android:id="@+id/tvRequestDuration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/Monitor.Item.Content"
        app:layout_constraintBottom_toBottomOf="@id/tvRequestTime"
        app:layout_constraintEnd_toStartOf="@id/tvRequestSize"
        app:layout_constraintStart_toEndOf="@id/tvRequestTime"
        app:layout_constraintTop_toTopOf="@id/tvRequestTime"
        tools:text="8023 ms" />

    <TextView
        android:id="@+id/tvRequestSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Monitor.Item.Content"
        app:layout_constraintBottom_toBottomOf="@id/tvRequestDuration"
        app:layout_constraintEnd_toEndOf="@id/tvMonitorId"
        app:layout_constraintTop_toTopOf="@id/tvRequestDuration"
        tools:text="16.45 KB" />

    <View
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@color/monitor_separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRequestTime" />

</androidx.constraintlayout.widget.ConstraintLayout>